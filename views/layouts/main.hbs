        crossorigin="anonymous" defer></script>

    <template id="track-add-row">
        <tr>
            <td class="track-nr">0</td>
            <td><input type="text" name="trackName" class="form-control" placeholder="Hello World!" required></td>
            <td><input type="text" name="trackLength" class="form-control" placeholder="3:12" required></td>
            <td><button class="btn btn-danger remove-track"><i class="fas fa-trash-alt"></i></button></td>
        </tr>
    </template>

    <title>Music Manager</title>
</head>

<body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-primary mb-4">
        <a href="/" class="navbar-brand">MusicManager</a>

        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent"
            aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>

        <div class="collapse navbar-collapse" id="navbarSupportedContent">
            <ul class="navbar-nav mr-auto">
                <li class="nav-item">
                    <a href="/" class="nav-link">All</a>
                </li>
                <li class="nav-item">
                    <a href="/add" class="nav-link">Add</a>
                </li>
                <li class="nav-item">
                    <a href="/manage" class="nav-link">Manage</a>
                </li>
                <li class="nav-item">
                    <a href="/settings" class="nav-link">Settings</a>
                </li>
            </ul>

            <form action="/search" method="GET" class="form-inline">
                <div class="form-group">
                    <input type="search" name="query" class="form-control" placeholder="Search albums...">
                </div>

                <button type="submit" class="btn btn-light"><i class="fas fa-search"></i></button>
            </form>
        </div>
    </nav>

    <div class="container">
        {{{ body }}}
    </div>
</body>

</html>