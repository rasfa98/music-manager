{{>flash}}

<h1>Your albums</h1>

<div class="dropdown">
    <button class="btn btn-link dropdown-toggle" type="button" data-toggle="dropdown">
        Sort by...
    </button>
    <div class="dropdown-menu">
        <a class="dropdown-item" href="/?sort=length">Album length</a>
        <a class="dropdown-item" href="/?sort=mostTracks">Most tracks</a>
        <a class="dropdown-item" href="/?sort=fewestTracks">Fewest tracks</a>
    </div>
</div>

<div class="row justify-content-center">
    {{#each albums}}
    <div class="card col-sm-5 m-2">
        <div class="card-body">
            <h5 class="card-title"><i class="fab fa-itunes-note"></i> {{albumTitle}}</h5>
            <p class="card-text"><i class="fas fa-user-alt"></i> {{band}}</p>
            <a href="/view/{{albumId}}">Details <i class="fas fa-arrow-right"></i></a>
        </div>
    </div>
    {{/each}}
</div>