{{>flash}}

<h1>Edit album</h1>

<form action="/edit/{{album.id}}" method="POST">
    <div class="form-group">
        <label for="title">Title</label>
        <input type="text" name="title" class="form-control" placeholder="Enter album title..." value="{{album.title}}"
            required>
    </div>

    <div class="form-group">
        <label for="band">Band</label>
        <input type="text" name="band" class="form-control" placeholder="Enter band..." value={{album.band}} required>
    </div>

    <div class="form-group">
        <label for="genre">Genre</label>
        <input type="text" name="genre" class="form-control" placeholder="Enter genre..." value="{{album.genre}}"
            required>
    </div>

    <div class="form-group">
        <label for="year">Year</label>
        <input type="text" name="year" class="form-control" placeholder="Enter year..." min="4" max="4" value="{{album.year}}"
            required>
    </div>

    <div class="form-group">
        <label for="producer">Producer</label>
        <input type="text" name="producer" class="form-control" placeholder="Enter producers (ex. John Doe, Will Smith)"
            value="{{producers}}" required>
    </div>

    <div class="form-group">
        <label for="label">Label</label>
        <input type="text" name="label" class="form-control" placeholder="Enter label..." value="{{album.label}}"
            required>
    </div>

    <div class="form-group">
        <label for="device">Device</label>
        <input type="text" name="device" class="form-control" placeholder="Enter device..." value="{{album.device}}"
            required>
    </div>

    <div class="form-group" id="tracks">
        <label>Tracks</label>

        <table class="table">
            {{#each tracks}}
            <tr>
                <td class="track-nr">{{trackNr}}</td>
                <td><input type="text" name="track" class="form-control" placeholder="Name..." value="{{name}}"
                        required></td>
                <td><input type="text" name="length" class="form-control" placeholder="Length..." value="{{length}}"
                        required></td>
                <td><button class="btn btn-danger remove-track">Remove</button></td>
            </tr>
            {{/each}}
        </table>

        <button id="add-track" class="btn btn-secondary">Add track</button>
    </div>

    <button type="submit" class="btn btn-primary">Edit</button>
</form>

<script src="/js/addTrack.js"></script>