{{>flash}}

<div id="delete-modal" class="alert alert-danger" style="display: none">Do you really want to delete <b class="text-capitalize font-weight-bold"></b>?
    <form id="modal-form" method="POST" class="mt-2">
        <button type="submit" class="btn btn-success">Yes, delete!</button>
        <button id="cancel" class="btn btn-secondary">Cancel...</button>
    </form>
</div>

<h1>Manage your albums</h1>

<table class="table mt-4">
    <tr>
        <th>Title</th>
        <th>Band</th>
        <th></th>
        <th></th>
        <th></th>
    </tr>
    {{#each albums }}
    <tr>
        <td id="album-title" class="text-capitalize">{{albumTitle}}</td>
        <td class="text-capitalize">{{band}}</td>
        <td><a class="btn btn-primary" href="/view/{{albumId}}">View</a></td>
        <td><a class="btn btn-success" href="/edit/{{albumId}}">Edit</a></td>
        <td><button class="btn btn-danger delete-album" data-title="{{albumTitle}}" data-id="{{albumId}}">Delete</button></td>
    </tr>
    {{/each}}
</table>

<script src="/js/deleteModal.js"></script>